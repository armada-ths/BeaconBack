<%- include layouts/header.ejs %>

        <div class="page-data">
         <div class="data-btn">
           <button onClick="addBeacon();">+ Add</button>
         </div>
         <div class="data-table">
            <table border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <th width="50px">No</th>
                    <th>Name</th>
                    <th>ID</th>
                    <th>Checkpoint</th>
                    <th>Longitude</th>
                    <th>Latitude</th>
                    <th width="120px">Action</th>
                </tr>
                               
                <% if(data.length){ 
                                
                 for(var i = 0;i < data.length;i++) { %>
                 
                <tr>
                    <td><%=(i+1)%></td>
                    <td><%=data[i].name%></td>
                    <td><%=data[i].id%></td>
                    <td><%=data[i].checkpoint_id%></td>
                    <td><%=data[i].pos_longitude%></td>
                    <td><%=data[i].pos_latitude%></td>
                    <td>
                        <a class="a-inside edit" href="../beacon/edit/<%=data[i].id%>">Edit</a>
                       
                        <a class="a-inside delete" href="../beacon/delete/<%=data[i].id%>">Delete</a>
                       
                    </td>
                </tr>
            <% }
            
             }else{ %>
                 <tr>
                    <td colspan="5">No beacon</td>
                 </tr>
            <% } %>
                
                              
                
            </table>
         </div>
        </div>



        
<%- include layouts/footer.ejs %>
